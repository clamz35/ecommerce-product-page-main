{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"paths": {
			"@layout/*": ["src/layout/*"],
			"@components/*": ["src/components/*"],
			"@shared/*": ["src/shared/*"],
			"@services/*": ["src/services/*"],
			"@routes/*": ["src/routes/*"],
			"@stores/*": ["src/stores/*"],
		}
	}
}